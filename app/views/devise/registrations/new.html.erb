<div class="container">
  <img class="user-info-logo-img" src="/assets/logo/logo.png"></img>

  <div class="card card-container">
    <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: {class: "form-user-info"}) do |f| %>
      <label for="inputName">이름</label>
      <%= f.text_field :name, required: true, autofocus: true, id: "inputName", class: "form-control"%>
      <label for="inputEmail">메일주소</label>
      <%= f.email_field :email, required: true, id: "inputEmail", class: "form-control"%>
      <label for="inputPassword">비밀번호</label>
      <%= f.password_field :password, required: true, id: "inputPassword", class: "form-control"%>
      <label for="inputPasswordConfirmation">비밀번호 확인</label>
      <%= f.password_field :password_confirmation, required: true, id: "inputPasswordConfirmation", class: "form-control"%>

      <button class="btn btn-outline-secondary btn-signin" type="submit">회원가입</button>
    
    <% end %>  
  </div><!-- /card-container -->
</div><!-- /container -->
