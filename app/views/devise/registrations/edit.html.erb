<div class="container">
  <%= image_tag("logo/logo.png", class: "user-info-logo-img") %>

  <div class="card card-container">
    <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: {class: "form-user-info"}) do |f| %>
      <label for="inputName">이름</label>
      <%= f.text_field :name, required: true, autofocus: true, id: "inputName", class: "form-control"%>
      <label for="inputEmail">메일주소</label>
      <%= f.email_field :email, required: true, id: "inputEmail", class: "form-control"%>
      <label for="inputPassword">변경할 비밀번호</label>
      <%= f.password_field :password, autocomplete: "off", required: false, id: "inputPassword", class: "form-control"%>
      <label for="inputPasswordConfirmation">비밀번호 확인</label>
      <%= f.password_field :password_confirmation, required: false, id: "inputPasswordConfirmation", class: "form-control"%>
      <label for="inputCurrentPassword">현재 비밀번호</label>
      <%= f.password_field :current_password, required: false, id: "inputCurrentPassword", class: "form-control"%>
      <button class="btn btn-outline-secondary btn-signin" type="submit">정보수정</button>
    
    <% end %>  
  </div><!-- /card-container -->
  
  <div class="container">
    <%= link_to "Cancel my account", registration_path(resource_name), data: { confirm: "Are you sure?" }, method: :delete %>
    <%= link_to "Back", :back %>
  </div>
  
</div><!-- /container -->

